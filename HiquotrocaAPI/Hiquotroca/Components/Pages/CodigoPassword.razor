@page "/codigo"
@inject NavigationManager Nav

<MudContainer MaxWidth="MaxWidth.False"
              Class="pa-4"
              Style="width:100%;height:100vh;background:white;overflow-y:auto;">

    <!-- Voltar -->
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack"
                   OnClick="Voltar"
                   Style="position:absolute;top:20px;left:15px;" />

    <!-- Avatar -->
    <div style="display:flex;justify-content:center;margin-top:40px;">
        <MudImage Src="images/Fox.png" Style="width:100px;" />
    </div>

    <!-- Título -->
    <MudText Typo="Typo.h5" Align="Align.Center"
             Style="font-weight:800;margin-top:15px;color:#D97A00;">
        Insira o código<br />recebido
    </MudText>

    <MudText Align="Align.Center"
             Style="color:#778;max-width:300px;margin:10px auto;">
        Introduza o código que enviámos para o seu número de telemóvel registado.
    </MudText>

    <!-- Código a 6 dígitos -->
    <div style="display:flex;gap:10px;justify-content:center;margin-top:25px;">
        @for (int i = 0; i < 6; i++)
        {
            <MudTextField T="string"
                          MaxLength="1"
                          Variant="Variant.Outlined"
                          Class="campo"
                          Style="width:45px;height:55px;text-align:center;font-size:20px;" />


        }
    </div>

    <!-- Botão -->
    <MudButton Variant="Variant.Filled"
               Color="Color.Warning"
               FullWidth="true"
               OnClick="IrParaRedefinir"
               Style="margin-top:30px;text-transform:none;font-weight:bold;border-radius:10px;padding:12px;">
        Redefinir palavra-passe
    </MudButton>

    <MudText Align="Align.Center" Style="margin-top:15px;color:#888;">
        Não recebeu o código?
        <MudLink Color="Color.Warning">Reenviar código</MudLink>
    </MudText>

</MudContainer>

@code {
    void Voltar() => Nav.NavigateTo("/recuperar");
    void IrParaRedefinir() => Nav.NavigateTo("/redefinir");
}

<style>
    .campo .mud-input-root {
        background: #edf4ff !important;
        border-radius: 12px !important;
    }

    .campo input {
        background: transparent !important;
    }
</style>
